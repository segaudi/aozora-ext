{
  "manifest_version": 3,
  "name": "Aozora Reading Helper (Offline)",
  "version": "0.1.0",
  "description": "Chunk-based beginner Japanese reading helper for Aozora Bunko pages.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.aozora.gr.jp/*",
    "http://www.aozora.gr.jp/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.aozora.gr.jp/*",
        "http://www.aozora.gr.jp/*"
      ],
      "js": ["kuromoji.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
